@import "mixins.styl"
@import "reset.css"
.header
  width: 100%
  height: 100px
  background: wheat
  clearFix()
  .img-content
    float left
    width: 200px
    height: 100%
    background: blue
    text-align: center
    >a
      .header-img
        height: 70px
        margin: 10px
  .header-p
    float: left
    text-align: center
    line-height 100px
    width: 150px
    height: 100px
    //border-right:1px solid black
    >span
      font-size 20px


  .slogan-content
    width: 200px
    height: 80px
    text-align: center
    line-height 80px
    margin:10px 0px
    float left
    border-left 2px solid black
    .slogan
      font-size 20px
      color black
      font-weight bold


  .header-right
    width: 160px
    height: 30px
    margin-top 70px
    float: right


.nav
  width: 100%
  height: 50px
  background: pink
  .nav-ul
    width: 500px
    height: 50px
    display: flex
    float: right
    text-align: center
    line-height 50px
    margin-right: 80px;
    >li
      flex 1
      &:hover
        background: red
        color: white
        transition: background  1s




.nav-bottom
  width: 100%
  height: 60px
  background: blue

.mainPart
  width 100%
  height 300px
  display flex
  .mainPart-left
    flex: 2
    width: 230px
    height: 230px
    background: #7e8c8d
    margin: 20px
  .mainPart-right
    flex 8
    margin: 20px
    height: 210px
    text-indent 20px
    letter-spacing 5px
    overflow: hidden


